@{
    ViewData["Title"] = "No Checkout";
    var exception = ViewBag.Exception as Exception;
}

<div class="text-center">
    <h1 class="display-4">No Checkout</h1>
    <p>There is no checkout to display.</p>
    @if (exception != null)
    {
        <div class="alert alert-danger">
            <strong>Error:</strong> @exception.Message
        </div>
    }
</div>