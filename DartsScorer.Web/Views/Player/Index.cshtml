@model IList<DartsScorer.Main.Player.Player>
@{
    ViewData["Title"] = "Player";
}

<div class="text-center">
    <h1 class="display-4">Player</h1>

    <!-- if there are no players write a message 'no players'   -->
    @if (Model.Count == 0)
    {
        <p>No players</p>
    }
    
    <!-- foreach of the Model players write it in a list -->

    <!-- add a text field and button that posts back to the controller method addplayer -->
    <form asp-controller="Player" asp-action="AddPlayer" method="post">
        <div class="input-group">
            <input type="text" class="form-control" name="Name" />
            <button type="submit" class="btn btn-primary">Add Player</button>
        </div>
    </form>
    
    <br/>
    
    <table class="table table-borderless">
        @foreach (var player in Model)
        {
            <tr>
                <td>
                    <form asp-controller="Player" asp-action="EditPlayer" method="post" class="d-inline">
                        <div class="input-group">
                            <input type="hidden" class="form-control" name="oldName" value="@player.Name"/>
                            <input type="text" class="form-control" name="Name" value="@player.Name"/>
                            <button type="submit" class="btn btn-primary">Edit</button>
                        </div>
                    </form>
                </td>
                <td>
                    <form asp-controller="Player" asp-action="DeletePlayer" method="post" class="d-inline">
                        <input type="hidden" name="Name" value="@player.Name"/>
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </table>
       

</div>