@model DartsScorer.Web.Models.ErrorViewModel
@{
    ViewData["Title"] = Model.Title;
}

<div class="container error-page my-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h2>@Model.Title</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <p class="lead">@Model.Message</p>
                    </div>
                    
                    @if (Model.StatusCode != 500)
                    {
                        <p>Status Code: @Model.StatusCode</p>
                    }
                    
                    @if (Model.ShowRequestId)
                    {
                        <p>
                            <strong>Request ID:</strong> <code>@Model.RequestId</code>
                        </p>
                    }
                    
                    @if (Model.ShowDetails && !string.IsNullOrEmpty(Model.Details))
                    {
                        <div class="card mt-4">
                            <div class="card-header bg-secondary text-white">
                                <h5>Technical Details</h5>
                            </div>
                            <div class="card-body">
                                <pre class="error-details bg-light p-3"><code>@Model.Details</code></pre>
                            </div>
                        </div>
                    }
                    
                    <div class="mt-4">
                        <a href="/" class="btn btn-primary">Return to Home Page</a>
                    </div>
                </div>
            </div>
            
            @if (!Model.ShowDetails)
            {
                <div class="card mt-4">
                    <div class="card-body bg-light">
                        <h5>Development Mode</h5>
                        <p>
                            Switching to <strong>Development</strong> environment will display more detailed information about the error that occurred.
                        </p>
                        <p>
                            <strong>The Development environment shouldn't be enabled for deployed applications.</strong>
                            It can result in displaying sensitive information from exceptions to end users.
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
