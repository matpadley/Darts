@model DartsScorer.Main.Match.RoundTheBoard.RoundTheBoardPlayer

@if (!Model.Finished())
{
    <form asp-action="Throw" method="post">
        <div class="input-group">
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="multiplier" value="S" id="single" checked>
                <label class="form-check-label" for="single">
                    Single
                </label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="multiplier" value="D" id="double">
                <label class="form-check-label" for="double">
                    Double
                </label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="multiplier" value="T" id="treble">
                <label class="form-check-label" for="treble">
                    Treble
                </label>
            </div>
        </div>
        <div class="btn-group btn-group-sm d-flex flex-wrap" role="group" aria-label="Throw Values">
            @for (var i = 1; i <= 20; i++)
            {
                <button type="button" class="btn btn-secondary btn-score flex-fill" onclick="setThrowValue(this, @i)">@i</button>
            }
        </div>
        <input type="hidden" id="throwValue" name="throwValue" value="" />
        <button type="submit" class="btn btn-primary btn-block mt-2">Throw</button>
    </form>
}