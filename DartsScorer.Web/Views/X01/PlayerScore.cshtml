@model DartsScorer.Main.Match.x01.X01Player

<div class="row">
    <div class="col">
        <h2>@Model.Name</h2>
    </div>
    <div class="col">
        <p>
            <b>Remaining</b><br/>@Model.RemainingScore
        </p>
    </div>
    <div class="col">
        <p style="color: @(Model.Checkout().Any() ? "black" : "gray")">
            <b>Checkout</b><br/>@string.Join(", ", Model.Checkout().Select(throwScore => throwScore))
        </p>
    </div>
</div>
<div>
    <h5>Current Throws:
    @if (Model.CurrentLeg != null)
    {
        <span>@string.Join(", ", Model.CurrentLeg.Throws)</span>
    }
    
    </h5>
</div>

